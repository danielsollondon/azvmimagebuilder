{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imagetemplatename": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        },
        "publisher": {
          "type": "string"
        },
        "offer": {
          "type": "string"
        },
        "sku": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "customizestepname": {
          "type": "string"
        },
        "customizescriptpath": {
          "type": "string"
        },
        "galleryImageId": {
          "type": "string"
        },
        "sharedgalimagename": {
          "type": "string"
        },
        "destinationregion": {
          "type": "string"
        }
    },
    
    "variables": {
      "resourceid": "[concat(parameters('galleryImageId'),parameters('sharedgalimagename'))]"
    },


    "resources": [
      {
        "name": "[parameters('imagetemplatename')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "properties": {
            "source": {
                "type": "PlatformImage",
                    "publisher": "[parameters('publisher')]",
                    "offer": "[parameters('offer')]",
                    "sku": "[parameters('sku')]",
                    "version": "[parameters('version')]"
                
            },
            "customize": [
                {
                    "type": "shell",
                    "name": "[parameters('customizestepname')]",
                    "script": "[parameters('customizescriptpath')]"
                }
            ],
            "distribute": 
                [
                  {
                    "type": "sharedImage",
                    "galleryImageId": "[variables('resourceid')]",
                    "runOutputName": "[parameters('sharedgalimagename')]",
                    "tags": {
                      "source": "azVmImageBuilder",
                      "releaseStatus": "staging",
                      "type": "sigonly"
                    },
                    "replicationRegions": [
                      "westcentralus",
                      "centralus"
                    ]
                  }
                ]
            }
        }

    
    ]
}    
