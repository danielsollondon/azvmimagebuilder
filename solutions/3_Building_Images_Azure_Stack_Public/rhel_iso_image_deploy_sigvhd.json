{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imagetemplatename": {
        "type": "string"
        },
        "svclocation": {
            "type": "string"
        },
        "sourceURI": {
          "type": "string"
        },
        "sha256Checksum": {
          "type": "string"
        },

        "galleryImageId": {
          "type": "string"
        },
        "runOutputName": {
          "type": "string"
        }
    },
    
    "variables": {

    },


    "resources": [
      {
        "name": "[parameters('imagetemplatename')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "2019-05-01-preview",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "properties": {
              "source": {
                "type": "ISO",
                    "sourceURI": "[parameters('sourceURI')]",
                    "sha256Checksum": "[parameters('sha256Checksum')]"
                
            },
            "customize": [
              {
                "type": "Shell",
                "name": "RunScripts01",
                "scriptUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/quickquickstarts/customizeScript.sh"
            },
            {
              "type": "File",
              "name": "downloadBuildArtifacts",
              "sourceUri": "https://raw.githubusercontent.com/danielsollondon/azvmimagebuilder/master/quickquickstarts/exampleArtifacts/buildArtifacts/index.html",
              "destination":"/tmp/index.html"
          },
            {
              "type": "Shell",
              "name": "setupBuildPath",
              "inline": [
                "sudo mkdir /buildArtifacts", "sudo cp /tmp/index.html /buildArtifacts/index.html"
              ]
          }
            ],
            "distribute": 
                [
                  {
                    "type": "SharedImage",
                    "galleryImageId": "[parameters('galleryImageId')]",
                    "runOutputName": "rhelvhdsigro",
                    "artifactTags": {
                        "source": "hybridpipeline",
                        "releaseStatus": "staging",
                        "type": "sig"
                    },
                    "replicationRegions": [
                      "[parameters('svclocation')]"
                    ]
                  },
                  {   
                    "type":"VHD",
                    "runOutputName": "rhelvhd",
                    "artifactTags": {
                        "source": "hybridpipeline",
                        "releaseStatus": "staging",
                        "type": "vhd"
                                    }
                  }
                ]
            }
        }

    
    ]
}    
